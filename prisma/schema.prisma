generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Models

model Workflow {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  name        String
  description String?

  editorObjectJSON String
  status     WorkflowStatusEnum

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  executions WorkflowExecution[]

  // User cannot have two workflows with the same name
  @@unique([name, userId])
}


model WorkflowExecution {
  id String @id @default(auto()) @map("_id")  @db.ObjectId
  workflowId String @db.ObjectId
  userId String
  status WorkflowExecutionStatusEnum
  creditsCost Int

  
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  steps ExecutionStep[]
  
  createdAt DateTime @default(now())
  startedAt DateTime?
  completedAt DateTime? 
}

model ExecutionStep {
  id String @id @default(auto()) @map("_id")  @db.ObjectId
  userId String
  status ExecutionStepStatusEnum 
  nodeId String
  outputResults String? 
  workflowExecutionId String?  @db.ObjectId
  execution WorkflowExecution? @relation(fields: [workflowExecutionId], references: [id], onDelete: Cascade)
  startedAt DateTime?
  completedAt DateTime?

}

model UserBalance {
  id String @id @default(auto()) @map("_id")  @db.ObjectId
  userId String
  availableCredits Int
  lastLoadedPackId String?

  @@unique([userId])
}


// Enums
enum WorkflowStatusEnum {
  DRAFT
  PUBLISHED
}

enum WorkflowExecutionStatusEnum {
  PENDING
  RUNNNING
  COMPLETED 
  FAILED
}

enum ExecutionStepStatusEnum {
  CREATED
  PENDING
  RUNNNING
  COMPLETED 
  FAILED
}

